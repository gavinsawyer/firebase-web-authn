{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api",
  "projectType": "library",
  "sourceRoot": "libs/api/src",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/api/**/*.ts"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [
          {
            "glob": "README.md",
            "input": "libs/api",
            "output": "."
          }
        ],
        "main": "libs/api/src/index.ts",
        "outputPath": "dist/libs/api",
        "tsConfig": "libs/api/tsconfig.lib.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    }
  }
}
