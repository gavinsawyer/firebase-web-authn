{
  "$schema":     "../../node_modules/nx/schemas/project-schema.json",
  "name":        "server",
  "projectType": "library",
  "sourceRoot":  "libs/server/src",
  "targets":     {
    "eslint":  {
      "executor": "@nx/eslint:lint",
      "options":  {
        "lintFilePatterns": [
          "libs/server/src/**/*.ts"
        ]
      }
    },
    "tsc":   {
      "dependsOn": [
        "eslint"
      ],
      "executor":  "@nx/js:tsc",
      "options":   {
        "assets":     [
          {
            "glob":   "README.md",
            "input":  "libs/server",
            "output": "."
          }
        ],
        "main":       "libs/server/src/index.ts",
        "outputPath": "dist/libs/server",
        "tsConfig":   "libs/server/tsconfig.lib.json"
      },
      "outputs":   [
        "{options.outputPath}"
      ]
    },
    "build": {
      "dependsOn": [
        "tsc"
      ],
      "executor":  "nx:noop"
    }
  }
}
