{
  "$schema":     "../../node_modules/nx/schemas/project-schema.json",
  "name":        "server",
  "projectType": "library",
  "sourceRoot":  "libs/server/src",
  "tags":        [],
  "targets":     {
    "lint":  {
      "executor": "@nx/linter:eslint",
      "options":  {
        "lintFilePatterns": [
          "libs/server/**/*.ts"
        ]
      },
      "outputs":  [
        "{options.outputFile}"
      ]
    },
    "build": {
      "executor": "@nx/js:tsc",
      "options":  {
        "assets":     [
          {
            "glob":   "README.md",
            "input":  "libs/server",
            "output": "."
          }
        ],
        "main":       "libs/server/src/index.ts",
        "outputPath": "dist/libs/server",
        "tsConfig":   "libs/server/tsconfig.lib.json"
      },
      "outputs":  [
        "{options.outputPath}"
      ]
    }
  }
}
