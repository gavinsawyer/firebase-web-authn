{
  "name": "website-functions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [
          {
            "glob": "README.md",
            "input": "libs/website-functions",
            "output": "."
          }
        ],
        "main": "libs/website-functions/src/index.ts",
        "outputPath": "dist/libs/website-functions",
        "rootDir": "libs",
        "tsConfig": "libs/website-functions/tsconfig.lib.json",
        "updateBuildableProjectDepsInPackageJson": false
      }
    },
    "deploy": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "firebase deploy --only functions"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/website-functions/**/*.ts"]
      }
    }
  },
  "tags": []
}
