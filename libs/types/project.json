{
  "$schema":     "../../node_modules/nx/schemas/project-schema.json",
  "name":        "types",
  "projectType": "library",
  "sourceRoot":  "libs/types/src",
  "targets":     {
    "lint":  {
      "executor": "@nx/linter:eslint",
      "options":  {
        "lintFilePatterns": [
          "libs/types/src/**/*.ts"
        ]
      }
    },
    "build": {
      "dependsOn": [
        "lint"
      ],
      "executor": "@nx/js:tsc",
      "options":  {
        "assets":     [
          {
            "glob":   "README.md",
            "input":  "libs/types",
            "output": "."
          }
        ],
        "main":       "libs/types/src/index.ts",
        "outputPath": "dist/libs/types",
        "tsConfig":   "libs/types/tsconfig.lib.json"
      },
      "outputs":  [
        "{options.outputPath}"
      ]
    }
  }
}
