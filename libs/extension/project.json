{
  "$schema":     "../../node_modules/nx/schemas/project-schema.json",
  "name":        "extension",
  "projectType": "library",
  "sourceRoot":  "libs/extension/src",
  "targets":     {
    "lint":  {
      "executor": "@nx/linter:eslint",
      "options":  {
        "lintFilePatterns": [
          "libs/extension/src/**/*.ts"
        ]
      }
    },
    "build": {
      "dependsOn": [
        "lint"
      ],
      "executor":  "@nx/esbuild:esbuild",
      "options":   {
        "assets":     [
          {
            "glob":   "CHANGELOG.md",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "extension.yaml",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "icon.png",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "package.json",
            "input":  "libs/extension/src",
            "output": "./src"
          },
          {
            "glob":   "POSTINSTALL.md",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "PREINSTALL.md",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "README.md",
            "input":  "libs/extension",
            "output": "."
          }
        ],
        "main":       "libs/extension/src/main.ts",
        "outputFileName": "src/main.js",
        "outputPath": "dist/libs/extension",
        "tsConfig":   "libs/extension/tsconfig.lib.json"
      },
      "outputs":   [
        "{options.outputPath}"
      ]
    }
  }
}
