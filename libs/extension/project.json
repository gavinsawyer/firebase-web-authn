{
  "$schema":     "../../node_modules/nx/schemas/project-schema.json",
  "name":        "extension",
  "projectType": "library",
  "sourceRoot":  "libs/extension/src",
  "tags":        [],
  "targets":     {
    "lint":  {
      "executor": "@nx/linter:eslint",
      "options":  {
        "lintFilePatterns": [
          "libs/extension/**/*.ts"
        ]
      },
      "outputs":  [
        "{options.outputFile}"
      ]
    },
    "build": {
      "executor": "@nx/js:tsc",
      "options":  {
        "assets":     [
          {
            "glob":   "CHANGELOG.md",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "extension.yaml",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "icon.png",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "package.json",
            "input":  "libs/extension/functions",
            "output": "./functions"
          },
          {
            "glob":   "POSTINSTALL.md",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "PREINSTALL.md",
            "input":  "libs/extension",
            "output": "."
          },
          {
            "glob":   "README.md",
            "input":  "libs/extension",
            "output": "."
          }
        ],
        "main":       "libs/extension/functions/main.ts",
        "outputPath": "dist/libs/extension",
        "tsConfig":   "libs/extension/tsconfig.lib.json"
      },
      "outputs":  [
        "{options.outputPath}"
      ]
    }
  }
}
