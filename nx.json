{
  "$schema":            "./node_modules/nx/schemas/nx-schema.json",
  "affected":           { "defaultBase": "main" },
  "namedInputs":        {
    "default":       [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production":    [ "default" ],
    "sharedGlobals": [ ]
  },
  "npmScope":           "firebase-web-authn",
  "nxCloudAccessToken": "${NX_CLOUD_ACCESS_TOKEN}",
  "nxCloudId":          "${NX_CLOUD_ID}",
  "targetDefaults":     {
    "angular-build":     { "cache": true },
    "angular-prerender": { "cache": true },
    "angular-server":    { "cache": true },
    "build":             {
      "dependsOn": [ "^build" ],
      "inputs":    [
        "production",
        "^production"
      ]
    },
    "deploy":            {
      "dependsOn": [ "^deploy" ],
      "inputs":    [
        "production",
        "^production"
      ]
    },
    "esbuild":           { "cache": true },
    "eslint":            {
      "cache":  true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ]
    },
    "serve":             {
      "dependsOn": [ "^serve" ],
      "inputs":    [
        "development",
        "^development"
      ]
    },
    "tsc":               { "cache": true }
  }
}
