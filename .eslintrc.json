{
  "ignorePatterns": [
    "**/*"
  ],
  "overrides":      [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "allow":                         [],
            "depConstraints":                [
              {
                "onlyDependOnLibsWithTags": [
                  "*"
                ],
                "sourceTag":                "*"
              }
            ],
            "enforceBuildableLibDependency": true
          }
        ],
        "tsdoc/syntax":                  "warn"
      }
    },
    {
      "extends": [
        "plugin:@nx/typescript"
      ],
      "files":   [
        "*.ts",
        "*.tsx"
      ],
      "rules":   {}
    },
    {
      "extends": [
        "plugin:@nx/javascript"
      ],
      "files":   [
        "*.js",
        "*.jsx"
      ],
      "rules":   {}
    }
  ],
  "plugins":        [
    "eslint-plugin-tsdoc",
    "@nx"
  ],
  "root":           true
}
