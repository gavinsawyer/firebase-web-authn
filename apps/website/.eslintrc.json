{
  "extends": [
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "extends": [
        "plugin:@nx/angular",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "files":   [
        "*.ts"
      ],
      "rules":   {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "website-app",
            "style":  "kebab-case",
            "type":   "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "websiteApp",
            "style":  "camelCase",
            "type":   "attribute"
          }
        ]
      }
    },
    {
      "extends": [
        "plugin:@nx/angular-template"
      ],
      "files":   [
        "*.html"
      ],
      "rules":   {}
    }
  ]
}
